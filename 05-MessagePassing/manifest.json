{
    "manifest_version": 3,
    "name": "Message Passing Demo",
    "version": "1.0",
    "description": "A Chrome extension to demonstrate message passing",
    "permissions": ["scripting", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"] ,
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }