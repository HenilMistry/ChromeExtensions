{
    "manifest_version": 3,
    "name": "Message Passing Demo",
    "version": "1.0",
    "description": "A Chrome extension to demonstrate message passing",
    "permissions": ["scripting", "activeTab"],
    "background": {
      "service_worker": "Assets/Scripts/background.js"
    },
    "host_permissions": ["<all_urls>"] ,
    "action": {
      "default_popup": "index.html",
      "default_icon" : "./Assets/Imgs/logo.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["Assets/Scripts/content.js"]
      }
    ]
  }